<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Admin - View Books</title>
    <link href="../public/css/styles.css" rel="stylesheet" />

    <link rel="stylesheet" href="fonts/icomoon/style.css">
    <link rel="stylesheet" href="../public/css/owl.carousel.min.css">
    <link rel="stylesheet" href="../public/css/bootstrap.min.css">
    <link rel="stylesheet" href="../public/css/style.css">

</head>

<style>
    body{
        background-color: white;
    }
</style>


<div class="container" style="margin-top: 100px; background-color: white !important;">
    
 
<a href="<%= user.link %>"><button id="genReportBtn" class="btn" style="margin-left: 900px;">Download</button></a>

<h2 class="mb-5"><%= user.name %> <b> Record</h2>
    <div class="table-responsive">
        <table class="table custom-table">
            <thead>
                <tr>
                    <th scope="col">
                        <label class="form-check-label">
              <input type="checkbox" class="js-check-all"/>
              
            </label>
                    </th>
                    <th scope="col">Name</th>
                    <th scope="col">Author</th>
                    <th scope="col">Publish Date</th>
                    <th scope="col">ISBN</th>
                    <th scope="col">Page Count</th>
                    <th scope="col">Word Count</th>
                    <th scope="col">Rating</th>
                </tr>
            </thead>
            <tbody>
                <% records.forEach(function(row){ %>
                <tr>
                    <th scope="row">
                        <label class="form-check-label">
                            <input type="checkbox"/>
                        </label>
                    </th>
                    <td><%= row.name %></td>
                    <td><%= row.author %></td>
                    <td><%= row.publishDate %></td>
                    <td><%= row.isbn %></td>
                    <td><%= row.pageCount %></td>
                    <td><%= row.wordCount %></td>
                    <td><%= row.rating %></td>
                </tr>
                <% })%>
                
            </tbody>
        </table>
    </div>
</div>