<% include ./partials/navBooks %>
<h1 class="mt-4" style="text-align: center; font-size: 50px; color: rgb(216, 207, 207);" >Search Book</h1>
<div class="container">
  <div class="table-wrapper">
    <div class="table-title">
      <div class="row">
        <div class="col-sm-8">
          <h2>
            <b>Books </b>List
            <a href="/book/add" class="">
              <i class="fas fa-plus-circle" style="color:green"></i>
            </a>
          </h2>
        </div>
        
        <div class="col-sm-12" style="text-align: center;">
          <div class="search-box">
            <i class="material-icons">&#xE8B6;</i>
            <form action="/book/all" >
            <input type="bookName" class="form-control" placeholder="Search&hellip; " />
            <button class="btn btn-outline-success my-2 my-sm-0 col-sm-12" type="submit">Search</button>
          </form>
          </div>
        </div> 
      </div>
      <div class="row">
        <div class="col-sm-8"></div>
        <div class="col-sm-4 ">
          <h1>
            <a href="#" class="float-right" target="blank">
              <i class="fas fa-file-pdf" style="color:rgb(184, 75, 12)"></i>
            </a>
          </h1>
        </div>
      </div>
    </div>
    <table class="table table-striped table-hover table-bordered">
      <thead>
        <tr>
          <th>Book Name <i class="fa fa-sort"></i></th>
          <th>Author Name</th>
          <th>Book Genre</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if(typeof book !='undefined' ){ %>
          <% book.forEach(function(book) { %>
            <tr>
              <td>
                <%= book.bookName%>
              </td>
              <td>
                <%= book.authorName%>
              </td>
              <td>
                <%= book.bookGenre%>
              </td>
              <td>
                <a href="#" class="view" title="View" data-toggle="tooltip"><i class="material-icons">&#xE417;</i></a>
                <a href="/book/updateParam/<%=book._id%>" class="edit" title="Edit" data-toggle="tooltip"><i class="material-icons">&#xE254;</i></a>
                <a href="/book/delete/<%=book._id%>" class="delete" title="Delete" data-toggle="tooltip"><i
                    class="material-icons">&#xE872;</i></a>
              </td>
            </tr>
            <% }); %>
              <% } %>
      </tbody>
    </table>
    <div class="clearfix">
      <div class="hint-text">Showing <b>1</b> out of <b>25</b> entries</div>
      <ul class="pagination">
        <li class="page-item disabled">
          <a href="#"><i class="fa fa-angle-double-left"></i></a>
        </li>
        <li class="page-item active"><a href="#" class="page-link">1</a></li>
        <li class="page-item"><a href="#" class="page-link">2</a></li>
        <li class="page-item"><a href="#" class="page-link">3</a></li>
        <li class="page-item"><a href="#" class="page-link">4</a></li>
        <li class="page-item"><a href="#" class="page-link">5</a></li>
        <li class="page-item">
          <a href="#" class="page-link"><i class="fa fa-angle-double-right"></i></a>
        </li>
      </ul>
    </div>
  </div>
</div>

<% include ./partials/footer %>