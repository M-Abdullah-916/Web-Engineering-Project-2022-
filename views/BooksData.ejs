<% include ./partials/navBooks %>
    <h1 class="mt-4" style="text-align: center; font-size: 50px; color: rgb(216, 207, 207);">Read Book</h1>
    <div class="container">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-8">
                        <h2>
                            <b>Books </b>List
                            <a href="/book/add" class="">
                                <i class="fas fa-plus-circle" style="color:green"></i>
                            </a>
                        </h2>
                    </div>
                    <table class="table table-striped table-hover table-bordered">
                        <thead>
                            <tr>
                                <th>Book Name <i class="fa fa-sort"></i></th>
                                <th>Author Name</th>
                                <th>Book Genre</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if(typeof book !='undefined' ){ %>
                                    <tr>
                                        <td>
                                            <%= book.bookName%>
                                        </td>
                                        <td>
                                            <%= book.authorName%>
                                        </td>
                                        <td>
                                            <%= book.bookGenre%>
                                        </td>
                                        <td>
                                            <a href="/book/updateParam/<%=book._id%>" class="edit" title="Edit"
                                                data-toggle="tooltip"><i class="material-icons">&#xE254;</i></a>
                                            <a href="/book/delete/<%=book._id%>" class="delete" title="Delete"
                                                data-toggle="tooltip"><i class="material-icons">&#xE872;</i></a>
                                        </td>
                                    </tr>
                                        <% } %>
                        </tbody>
                    </table>
                    <div>
                    <h2 style="text-align: center; font-size: 40px; color: rgb(216, 207, 207);">Book Data</h2>
                </div>
                    <div style="font-size: 25px;margin-top: 5%;">
                        <p>
                            <%= book.bookData%>
                        </p>
                    </div>

                    <% include ./partials/footer %>