<% include ./partials/navPoems %>
    <h1 class="mt-4" style="text-align: center; font-size: 50px; color: rgb(216, 207, 207);">Read Poem</h1>
    <div class="container">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-8">
                        <h2>
                            <b>Poems </b>List
                            <a href="/poem/add" class="">
                                <i class="fas fa-plus-circle" style="color:green"></i>
                            </a>
                        </h2>
                    </div>
                    <table class="table table-striped table-hover table-bordered">
                        <thead>
                            <tr>
                                <th>Poem Name <i class="fa fa-sort"></i></th>
                                <th>Author Name</th>
                                <th>Poem Genre</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if(typeof poem !='undefined' ){ %>
                                    <tr>
                                        <td>
                                            <%= poem.poemName%>
                                        </td>
                                        <td>
                                            <%= poem.authorName%>
                                        </td>
                                        <td>
                                            <%= poem.poemGenre%>
                                        </td>
                                        <td>
                                            <a href="/poem/updateParam/<%=poem._id%>" class="edit" title="Edit"
                                                data-toggle="tooltip"><i class="material-icons">&#xE254;</i></a>
                                            <a href="/poem/delete/<%=poem._id%>" class="delete" title="Delete"
                                                data-toggle="tooltip"><i class="material-icons">&#xE872;</i></a>
                                        </td>
                                    </tr>
                                        <% } %>
                        </tbody>
                    </table>
                    <div>
                    <h2 style="text-align: center; font-size: 40px; color: rgb(216, 207, 207);">Poem Data</h2>
                </div>
                    <div style="font-size: 25px;margin-top: 5%;">
                        <p>
                            <%= poem.poemData%>
                        </p>
                    </div>

                    <% include ./partials/footer %>