<% include ./partials/navBooks %>
<h1 class="mt-4" style="text-align: center; font-size: 50px; color: rgb(216, 207, 207);" >Add Book Manually</h1>

<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <i class="fa fa-book"></i> Add Books Manually
      </h1>
      <% include ./partials/messages %>
        <form action="/book/addm" method="POST">
          <div class="form-group">
            <label for="bookName">Book Name</label>
            <input type="text" id="bookName" name="bookName" class="form-control" placeholder="Enter Book Name" />
          </div>
          <div class="form-group">
            <label for="authorName">Author Name</label>
            <input type="text" id="authorName" name="authorName" class="form-control" placeholder="Enter Author Name" />
          </div>
          <div class="form-group">
            <label for="bookGenre">Book Genre</label>
            <input type="text" id="bookGenre" name="bookGenre" class="form-control" placeholder="Enter Book Genre" />
          </div>
          <div class="form-group">
            <label for="bookData">Book Content</label>
            <textarea name="bookData" id="bookData" cols="77" rows="10" placeholder="Enter Book Content">
          </textarea>
          </div>
          <input type="submit" name="submit" value="Add Book" class="btn btn-primary btn-block" />
        </form>
    </div>
  </div>
</div>