<h1 class="mt-4" style="text-align: center; font-size: 50px; color: rgb(216, 207, 207);" >Reviews</h1>
<p class="lead mb-3" style="text-align: center;">Welcome <%= user.firstname %> <%= user.lastname %></p>












<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3">
          <i class="fa fa-book"></i> Add Books Manually
        </h1>
        <div style="margin-left: 5%;">
            <% include ./partials/messages %>
            <form action="/users/reviews" method="POST">
              <div class="form-group">
                <label for="username">Username</label>
                <input type="text" id="Username" name="Username" class="form-control" placeholder="Enter Username" size="15" value=" <%= user.firstname %>"/>
              </div>
              <div class="form-group">
                <label for="data">Review</label>
                <input type="text" id="data" name="data" class="form-control" cols="77" rows="10" size="60" placeholder="Your Review" />
              </div>
              <div class="form-group">
                <label for="Rating">Rating</label>
                <input type="number" id="Rating" name="Rating" class="form-control" size="20" placeholder="Your Rating" />
              </div>
              <input type="submit" name="submit" value="Add Review" class="btn btn-primary btn-block" />
            </form>
            </div>
      </div>
    </div>
  </div>

    <br><br>
    <p class="lead mb-3" style="text-align: center;">Reviews</p>
< <table class="table table-striped table-hover table-bordered">
    <thead>
      <tr>
        <th>Username <i class="fa fa-sort"></i></th>
        <th>Rating</th>
        <th>Review</th>
      </tr>
    </thead>
    <tbody>
        <% if(typeof review !='undefined' ){ %>
        <% review.forEach(function(review) { %>
          <tr>
            <td>
              <%= review.username%>
            </td>
            <td>
              <%= review.rating%>
            </td>
            <td>
              <%= review.data%>
            </td>
          </tr>
          <% }); %>
            <% } %>
    </tbody>
  </table>